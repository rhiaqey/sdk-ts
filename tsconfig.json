{
    "compilerOptions": {
      "noImplicitAny": true,
      "ignoreDeprecations": "5.0",
      "outDir": "dist/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "suppressImplicitAnyIndexErrors": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "include": ["src"],
    "exclude": ["src/**/tests"],
}
